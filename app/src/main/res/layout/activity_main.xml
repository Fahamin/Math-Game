<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4CAF50"
    android:weightSum="20"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_marginTop="3dp"
        android:layout_weight="18.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/oval"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Score:"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/dividerMath"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text=" 0"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="35sp" />

        </LinearLayout>




        <TextView
            android:id="@+id/timeID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"
            android:background="@drawable/oval"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/oval"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:background="#F5F3ED"
            android:layout_marginTop="5dp"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/singID"
            android:background="#F5F3ED"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:text=" + "
            android:textSize="35sp" />

        <TextView
            android:id="@+id/numberTwo"
            android:background="#F5F3ED"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:text="30"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#F5F3ED"
            android:text="= ?"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/anserOne"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            android:background="@drawable/oval"
            android:onClick="chooseAnswer"
            android:text="30"
            android:textSize="25sp" />

        <Button
            android:id="@+id/anserTwo"
            android:layout_width="135dp"
            android:background="@drawable/oval"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            android:onClick="chooseAnswer"
            android:text="30"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="chooseAnswer"
        android:orientation="horizontal">

        <Button
            android:id="@+id/anserThree"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            android:background="@drawable/oval"
            android:onClick="chooseAnswer"
            android:text="30"
            android:textSize="25sp" />

        <Button
            android:id="@+id/anseFour"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            android:background="@drawable/oval"
            android:onClick="chooseAnswer"
            android:text="30"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reslutTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="!!"
        android:textAlignment="center"
        android:background="@drawable/oval"
        android:textSize="25sp"
        android:textStyle="bold" />

    </LinearLayout>

